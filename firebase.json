{
  "hosting": {
    "headers": [
      {
        "source": "**/*.pdf",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/pdf"
          }
        ]
      }
    ],
    "public": "out",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
